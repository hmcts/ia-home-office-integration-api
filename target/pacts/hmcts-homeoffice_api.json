{
    "provider": {
        "name": "homeoffice_api"
    },
    "consumer": {
        "name": "hmcts"
    },
    "interactions": [
        {
            "description": "Provider receives a POST /searchByParameters request from an IA API",
            "request": {
                "method": "POST",
                "path": "/searchByParameters",
                "headers": {
                    "Content-Type": "application/json"
                }
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "firstName": "John",
                    "ho_reference": "1234-5678-6789-7890",
                    "appealDecisionDate": "20-02-2020",
                    "surname": "Smith"
                },
                "matchingRules": {
                    "body": {
                        "$.ho_reference": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.appealDecisionDate": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.firstName": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.surname": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    },
                    "header": {
                        "Content-Type": {
                            "matchers": [
                                {
                                    "match": "regex",
                                    "regex": "application/json;\\s?charset=(utf|UTF)-8"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "Homeoffice successfully returns appeal details"
                }
            ]
        }
    ],
    "metadata": {
        "pactSpecification": {
            "version": "3.0.0"
        },
        "pact-jvm": {
            "version": "3.5.24"
        }
    }
}